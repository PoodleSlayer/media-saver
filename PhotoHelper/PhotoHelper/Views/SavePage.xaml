<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoHelper.Views.SavePage">
    <ContentPage.Content>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*" />
				<ColumnDefinition Width="1*" />
				<ColumnDefinition Width="1*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="3*" />
			</Grid.RowDefinitions>
			<Button Text="Back"
					x:Name="BackBtn"
					Grid.Column="2"
					Grid.Row="0" />
			<Label Text="Save Page As..."
				   HorizontalOptions="Center"
				   VerticalOptions="CenterAndExpand"
				   FontSize="Large"
				   Grid.Column="0"
				   Grid.ColumnSpan="2"
				   Grid.Row="0" />
			<Label Text="Page URL"
				   VerticalOptions="End"
				   Margin="15,0,0,0"
				   Grid.Column="0"
				   Grid.Row="1" 
				   Grid.ColumnSpan="3" />
			<Label Text="blah.blah.blah"
				   VerticalOptions="Start"
				   Margin="15,0,15,0"
				   Grid.Column="0"
				   Grid.Row="2"
				   Grid.ColumnSpan="3" />
			<Label Text="Page Name"
				   VerticalOptions="End"
				   Margin="15,0,0,0"
				   Grid.Column="0"
				   Grid.Row="3" 
				   Grid.ColumnSpan="3" />
			<Entry Placeholder="Save page as..."
				   VerticalOptions="Start"
				   Margin="15,0,15,0"
				   Grid.Column="0"
				   Grid.Row="4" 
				   Grid.ColumnSpan="3" />
			<Label Text="Load as default page?"
				   VerticalOptions="End"
				   Margin="15,0,0,0"
				   Grid.Column="0"
				   Grid.Row="5" 
				   Grid.ColumnSpan="3" />
			<Switch x:Name="DefaultSwitch"
					VerticalOptions="Start"
					Margin="15,0,0,0"
					Grid.Column="0"
					Grid.Row="6" />
			<Label Text="File Name for Media"
				   VerticalOptions="End"
				   Margin="15,0,0,0"
				   Grid.Column="0"
				   Grid.Row="7" 
				   Grid.ColumnSpan="3" />
			<Entry Placeholder="Save media as..."
				   VerticalOptions="Start"
				   Margin="15,0,15,0"
				   Grid.Column="0"
				   Grid.Row="8"
				   Grid.ColumnSpan="3" />
			<Button Text="Save Page"
					Grid.Column="1"
					Grid.Row="9" />
		</Grid>
    </ContentPage.Content>
</ContentPage>